<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.ting.moviews" version="1.0.0" versionCode="2">

    <name>Moviews</name>

    <description>Movie Reviews</description>

    <author href="http://www.ting.in" email="info@ting.in">Ting</author>

    <!--    <gap:platform name="ios" />-->
    <gap:platform name="android" />

    <preference name="phonegap-version" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="android-targetSdkVersion" value="14" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="HideKeyboardFormAccessoryBar" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ErrorUrl" value="" />
    <preference name="KeepRunning" value="true" />
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="DisallowOverscroll" value="true" />

    <!--Android-->
    <icon src="icon/android/drawable-ldpi/ic_launcher.png" gap:platform="android" density="ldpi" />
    <icon src="icon/android/drawable-mdpi/ic_launcher.png" gap:platform="android" density="mdpi" />
    <icon src="icon/android/drawable-hdpi/ic_launcher.png" gap:platform="android" density="hdpi" />
    <icon src="icon/android/drawable-xhdpi/ic_launcher.png" gap:platform="android" density="xhdpi" />
    <icon src="icon/android/drawable-xxhdpi/ic_launcher.png" gap:platform="android" density="xxhdpi" />
    <icon src="icon/android/drawable-xxxhdpi/ic_launcher.png" gap:platform="android" density="xxxhdpi" />

    <gap:splash src="screen/android/screen-port-hdpi.jpg" gap:platform="android" density="port-hdpi" />
    <gap:splash src="screen/android/screen-port-ldpi.jpg" gap:platform="android" density="port-ldpi" />
    <gap:splash src="screen/android/screen-port-mdpi.jpg" gap:platform="android" density="port-mdpi" />
    <gap:splash src="screen/android/screen-port-xhdpi.jpg" gap:platform="android" density="port-xhdpi" />
    <gap:splash src="screen/android/screen-port-xxhdpi.jpg" gap:platform="android" density="port-xxhdpi" />


    <icon src="img/icon.png" />

    <gap:splash src="img/splash-screen.png" />

    <access origin="*" />

    <gap:plugin name="com.ionic.keyboard" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <!-- Pushwoosh plugin -->
    <gap:plugin name="com.pushwoosh.plugins.pushwoosh" source="plugins.cordova.io" />

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <feature name="Keyboard">
        <param name="ios-package" value="IonicKeyboard" onload="true" />
    </feature>
    <!-- for iOS -->
    <feature name="SocialSharing">
        <param name="ios-package" value="SocialSharing" />
    </feature>
    <!-- for Android (you will find one in res/xml) -->
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>

</widget>